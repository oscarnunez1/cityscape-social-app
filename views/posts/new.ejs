<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/posts" method="POST">
    <label for="title-input">Title: </label>
    <input type="text" name="title" id="title-input">
    <label for="image-input">Image URL: </label>
    <input type="text" name="image" id="image-input">
    <label for="textarea-input">Description: </label>
    <textarea type="text" name="textarea" rows="5" cols="60" id="textarea-input"></textarea>
    <label for="category-select">Category: </label>
    <select name="category" id="category-select">
      <option value="Architecture">Architecture</option>
      <option value="New Development">New Development</option>
      <option value="Construction">Construction</option>
      <option value="Permits">Permits</option>
      <option value="Land Acquisition">Land Acquisition</option>
      <option value="Loans & Financing">Loans & Financing</option>
    </select>
    <button type="submit">Submit</button>
</main>

<%- include('../partials/footer') %>