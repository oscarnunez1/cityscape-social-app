<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/edit.css">
<%- include('../partials/nav') %>

<main>

  <div class="card w-50" id="center-card">
    <h1><%= title %></h1>
    <div class="card-body text-center">
      <div class="row mb-3">
        <form action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
          <div class="row mb-3">
            <label for="edit-comment-input" class="form-label">Edit Comment:<br>
              <textarea type="text" class="form-control" name="content" id="edit-comment-input" rows="5"></textarea>
            </label>
          </div>
          <button type="submit" class="btn btn-outline-danger btn-lg">Submit</button>
        </form>
      </div>
    </div>
  </div>

</main>

<%- include('../partials/footer') %>