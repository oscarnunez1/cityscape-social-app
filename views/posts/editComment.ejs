<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/edit.css">
<%- include('../partials/nav') %>

<section>
  <h1>Edit your comment!</h1>
  <form 
    action="/posts/<%= post._id %>/comments/<%= comment._id %>?_method=PUT"
    method="POST"
  >
    <label>
      Content: 
      <textarea
        cols="30"
        rows="5" 
        type="text"
        name="content" 
        autocomplete="off"
      ><%= comment.content %></textarea>
    </label>
    <button type="submit">Update Comment</button>
  </form>
</section>

<%- include('../partials/footer') %>