<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/posts/index.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <body>
    <% posts.forEach((post) => { %>
      <div>
        <article>
          <h1><%= post.title %></h1>
          <h2><%= post.creator %></h2>
          <h3><%= post.createdAt.toLocaleDateString() %> </h3>
          <img src="<%= post.image %>" width="1500">
          <p><%=  post.textarea %></p>
        </article>
      </div>
      <% }) %>
  </body>
</main>


<%- include('../partials/footer') %>